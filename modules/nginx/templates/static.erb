server {
  server_name <%= name %>;
  root <%= root %>;

  error_page 404 = /404.html;

  location ~* \.(?:ico|css|js|gif|jpe?g|png)$ {
    expires 30d;
    add_header Pragma public;
    add_header Cache-Control "public";
  }

  location / {
    expires 10m;
    add_header Pragma public;
    add_header Cache-Control "public";

    try_files $uri $uri/index.html $uri.html =404;
  }
}